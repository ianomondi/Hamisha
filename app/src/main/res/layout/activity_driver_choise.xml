<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DriverChoiseActivity"
    android:orientation="vertical"
    android:background="@color/white">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:id="@+id/welcome_text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:text="Welcome Username How would you like to use hamisha"
           android:textColor="@android:color/black"
           android:textSize="24sp"
           android:textAlignment="center"
           android:textStyle="italic"/>

       <!-- A CardView that contains a TextView -->
       <androidx.cardview.widget.CardView
           xmlns:card_view="http://schemas.android.com/apk/res-auto"
           android:id="@+id/truck_owner_view"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="110dp"
           card_view:cardCornerRadius="4dp"
           android:layout_margin="20dp"
           card_view:cardElevation="8dp"
           >

           <TextView
               android:id="@+id/truck_owner_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Truck Owner.\nDriver who owns a personal Truck and would like to use His/Her truck to deliver products or items to clients"
               android:textSize="18sp"
               android:textAlignment="center"
               />
       </androidx.cardview.widget.CardView>

       <!-- A CardView that contains a TextView -->
       <androidx.cardview.widget.CardView
           xmlns:card_view="http://schemas.android.com/apk/res-auto"
           android:id="@+id/driver_view"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="110dp"
           card_view:cardCornerRadius="4dp"
           card_view:cardElevation="8dp"
           android:layout_margin="15dp">

           <TextView
               android:id="@+id/driver_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Driver for hire.\nDriver who does not own a personal Truck but would like to be hired by a truck owner to deliver products or items to clients"
               android:textSize="18sp"
               android:textAlignment="center"
               />
       </androidx.cardview.widget.CardView>

       <!-- A CardView that contains a TextView -->
       <androidx.cardview.widget.CardView
           xmlns:card_view="http://schemas.android.com/apk/res-auto"
           android:id="@+id/boda_owner_view"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="110dp"
           card_view:cardCornerRadius="4dp"
           android:layout_margin="15dp"
           card_view:cardElevation="8dp">

           <TextView
               android:id="@+id/boda_owner_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Boda owner.\nDriver who owns a personal Bodaboda and would like to use His/Her Bodaboda to deliver products or items to clients"
               android:textSize="18sp"
               android:textAlignment="center"/>
       </androidx.cardview.widget.CardView>

       <!-- A CardView that contains a TextView -->
       <androidx.cardview.widget.CardView
           xmlns:card_view="http://schemas.android.com/apk/res-auto"
           android:id="@+id/boda_driver_view"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="110dp"
           card_view:cardCornerRadius="4dp"
           card_view:cardElevation="8dp"
           android:layout_margin="15dp">

           <TextView
               android:id="@+id/boda_driver_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Driver for hire.\nDriver who does not own a personal Truck but would like to be hired by a truck owner to deliver products or items to clients"
               android:textSize="18sp"
               android:textAlignment="center"/>
       </androidx.cardview.widget.CardView>
   </LinearLayout>

</ScrollView>