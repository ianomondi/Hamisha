<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none"
    tools:context=".DisplayActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/display_reg_slogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="8dp"
                android:text="Confirm your details"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp"/>



            <EditText
                android:id="@+id/label_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_reg_slogan"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/ivfname"
                android:padding="8dp"/>

            <com.rey.material.widget.ImageView
                android:id="@+id/ivfname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_below="@+id/display_reg_slogan"
                android:layout_marginTop="8dp"
                android:tint="@color/iconcolor"
                android:padding="8dp"/>



            <EditText
                android:id="@+id/label_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivfname"
                android:layout_toRightOf="@+id/ivlname"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

            <com.rey.material.widget.ImageView
                android:id="@+id/ivlname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_below="@+id/ivfname"
                android:layout_marginTop="8dp"
                android:tint="@color/iconcolor"
                android:padding="8dp"/>



            <EditText
                android:id="@+id/label_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_lname"
                android:layout_toRightOf="@+id/ivid"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

            <com.rey.material.widget.ImageView
                android:id="@+id/ivid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_content_copy_black_24dp"
                android:layout_below="@+id/ivlname"
                android:layout_marginTop="8dp"
                android:tint="@color/iconcolor"
                android:padding="8dp"/>



            <EditText
                android:id="@+id/label_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_id"
                android:layout_toRightOf="@+id/ivphone"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />
            <com.rey.material.widget.ImageView
                android:id="@+id/ivphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_below="@+id/ivid"
                android:layout_marginTop="8dp"
                android:tint="@color/iconcolor"
                android:padding="8dp"/>


            <EditText
                android:id="@+id/label_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivemail"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/label_phone"
                android:padding="8dp" />

            <com.rey.material.widget.ImageView
                android:id="@+id/ivemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email_black_24dp"
                android:layout_below="@+id/ivphone"
                android:layout_marginTop="8dp"
                android:tint="@color/iconcolor"
                android:padding="8dp"/>


            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/label_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivemail"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/label_email"
                android:hint="Password"
                android:padding="8dp" />

            <com.rey.material.widget.ImageView
                android:id="@+id/ivpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_black_24dp"
                android:layout_below="@+id/label_email"
                android:layout_marginTop="8dp"
                android:tint="@color/iconcolor"
                android:padding="8dp"/>

            <com.rey.material.widget.CheckBox
                android:id="@+id/check_box"
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_password"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="I agree to terms and conditions" />

            <com.rey.material.widget.Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verify_button"
                android:layout_below="@id/check_box"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:background="@color/coloryellow"
                android:textColor="@android:color/white"
                android:text="Next"

                />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>